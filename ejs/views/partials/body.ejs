<div class="container mt-3">
    <div class="jumbotron">
        <h1 class="titulos">Vista de Productos template EJS</h1>
        <br>
    
        <% if (existProducts){ %>
            <table class="table table-striped table-dark table-sm">
                <thead>
                    <tr>
                        <th scope="col">NAME</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">PHOTO</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(( prod )=>{ %>
                    <tr>
                        <td><%= prod.title %></td>
                        <td><%= prod.price %></td>
                        <td><img class="img-fluid" style="width:100px;height:100px;" src=<%= prod.thumbnail %>   alt="not found"></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        <% }else{ %>
            <h3 class="alert alert-warning">No se encontraron productos</h3>
        <% } %>
    
        <br>
        <a href="/" type="button" class="btn btn-primary btn-block">Add new product</a>
    </div>
</div>